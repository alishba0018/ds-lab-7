#include <iostream>
using namespace std;

int getMax(int arr[],int size){
    int max=arr[0];
    for(int i=0;i<size;i++){
        if(arr[i]>max){
            max=arr[i];
        }
    }
    return max;
}

void countingSort(int arr[],int size,int div){
    int output[size];
    int count[10]={0};
    for(int i=0;i<size;i++){
        count[(arr[i]/div)%10]++;
    }
     for(int i=1;i<10;i++){
        count[i]+=count[i-1];
    }
     for(int i=size-1;i>=0;i--){
        output[count[(arr[i]/div)%10]-1]=arr[i];
        count[(arr[i]/div)%10]--;
    }
    for(int i=0;i<size;i++){
        arr[i]=output[i];
    }
}

void RadixSort(int arr[],int size){
    int m=getMax(arr,size);
    for(int div=1;m/div>0;div*=10){
        countingSort(arr,size,div);
    }
}

int main() {
   int arr[]={764,23,15,53,890,48,376,1,98,555};
   int size=sizeof(arr)/sizeof(arr[0]);
   RadixSort(arr,size);
   cout<<"sorted array is ascending order:"<<endl;
   for(int i=0;i<size;i++){
       cout<<arr[i]<<" ";
   }
   cout<<"\n sorted array is desscending order:"<<endl;
   for(int i=size-1;i>=0;i--){
       cout<<arr[i]<<" ";
   }
    return 0;
}
